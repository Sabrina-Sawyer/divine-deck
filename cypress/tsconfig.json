{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "types": ["cypress", "node", "@testing-library/cypress"],
      "isolatedModules": false,
      "noEmit": true,
      "composite": true,
      "jsx": "react-jsx",
      "strict": true
    },
    "include": [
      "**/*.tsx",
      "**/*.ts",
      "**/*.js",
      "**/*.jsx",
      "cypress/**/*.ts",
      "cypress/**/*.js",
      "cypress/**/*.tsx",
      "cypress/**/*.jsx",
      "../client/src/components/**/*.tsx",
        "../client/src/components/**/*.ts",
        "../client/src/components/**/*.js",
        "../client/src/components/**/*.jsx",
        "../client/src/pages/**/*.tsx",
        "../client/src/pages/**/*.ts",
        "../client/src/pages/**/*.js",
        "../client/src/pages/**/*.jsx",
        "../client/src/utils/**/*.tsx",
        "../client/src/utils/**/*.ts",
    ]
  }
  